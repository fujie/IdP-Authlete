# Development environment configuration for OP2
# Copy this file to .env.op2 and fill in your actual values

AUTHLETE_BASE_URL=https://jp.authlete.com
AUTHLETE_SERVICE_ID=YOUR_SERVICE_ID_HERE
AUTHLETE_SERVICE_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE
PORT=3002
NODE_ENV=development
SESSION_SECRET=development_session_secret_op2_change_in_production
HTTP_TIMEOUT=10000
HTTP_RETRY_ATTEMPTS=3
# SKIP_STARTUP_VALIDATION=true

# OpenID Federation Configuration
FEDERATION_ENABLED=true
FEDERATION_TRUST_ANCHORS=https://ta.diddc.site

# Authorization Server (OP) Entity ID
# This is the public URL where the OP is accessible (via cloudflared)
OP_ENTITY_ID=https://op2.diddc.site
