# Authlete API Configuration
AUTHLETE_BASE_URL=https://us.authlete.com
AUTHLETE_SERVICE_ID=your_service_id_here
AUTHLETE_SERVICE_ACCESS_TOKEN=your_service_access_token_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your_session_secret_here

# HTTP Client Configuration
# Timeout for HTTP requests in milliseconds
HTTP_TIMEOUT=10000

# Number of retry attempts for failed requests
# Recommended: 5 for rate limit handling with exponential backoff
# Backoff delays: 1s, 2s, 4s, 8s, 16s (max 32s)
HTTP_RETRY_ATTEMPTS=5

# Federation Configuration
FEDERATION_ENABLED=true
FEDERATION_TRUST_ANCHORS=https://trust-anchor.example.com,https://intermediate.example.com

# Authorization Server (OP) Entity ID
# This is the public URL where the OP is accessible (via cloudflared)
# Example: https://your-op-url.trycloudflare.com
OP_ENTITY_ID=https://your-op-url.trycloudflare.com